<script type="text/javascript">
$(function(){
var weather='<iframe width="450" scrolling="no" height="18" frameborder="0" allowtransparency="true" src="cache/weather.html"></iframe>';
$('#weather').html(weather);
  
      $('.article_content img').addClass('picshadow');
  
//======================

    
	  $('.article_content p').removeAttr('style');
      $('.article_content p').css('text-indent','2em');
	  $('.article_content p').each(function(){
	  	var c=$(this).html();
	    c=c.replace(/^(\s)+/,'');
		$(this).html(c);
	  });
	  $('.article_content p').has('img').css('text-indent','0');
	
	//针对table元素进行修改
	$('table').removeAttr('style').css('border','1px solid #999').css('border-collapse','collapse').css('width','98%');
	$('table p').removeAttr('style').css('text-indent','0');
	
  $('.px').click(function(event){
   event.preventDefault();
   var size=$(this).attr('for')+'px';
   $('.article_content').css('font-size',size);
  });
  
  //针对table元素进行修改
  
  //window.setTimeout('5000',fx.ah());
  
})
</script> 

